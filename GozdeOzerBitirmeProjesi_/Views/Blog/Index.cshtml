@using GozdeOzerBitirmeProjesi_.Extensions;
@model IEnumerable<GozdeOzerBitirmeProjesi_.Entities.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Token"] == null)
{
    Response.RedirectToRoute(new { controller = "Login", action = "Index" });
}
<div class="row">
    <div class="col-md-6">
        <h2>Tarifler</h2>
        <div class="col-md-6 text-right">
            <br />
            <a href="@Url.Action("Add")" class="btn btn-info">
                <i class="fa-solid fa-plus"></i>Yeni Ekle
            </a>
        </div>
    </div>
    <div id="message" class="col-md-6">
        @Html.Raw(TempData["Mesaj"])
    </div>
</div>

<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kategori</th>
            <th>Başlık</th>
            <th>Anahtar Kelime</th>
            <th>Durum</th>
            <th>Tarih</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
            <tr>
                <td>@item.Category.Name</td>
                <td>@item.Caption</td>
                <td>@item.Keyword</td>
                @if (item.Status)
                {
                    <td>Aktif</td>
                }
                else
                {
                    <td>Pasif</td>
                }

                <td>@item.Createdate.ToShortDateString()</td>
                <th>
                    <a href="@Url.Action("Detail",new {id=item.Id})" class="btn btn-success">Detay</a>


                    <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-warning">Düzenle</a>

                    <a href="@Url.Action("Delete",new {id=item.Id})" class="btn btn-danger" onclick="return confirm('@item.Caption Blogu Silmek İstediğinize Emin Misiniz ?');">
                        Sil
                    </a>

                </th>

            </tr>
        }

    </tbody>

</table>