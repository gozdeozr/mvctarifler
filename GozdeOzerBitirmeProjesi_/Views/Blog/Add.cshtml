@model GozdeOzerBitirmeProjesi_.Entities.Blog

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["Token"] == null)
{
    Response.RedirectToRoute(new { controller = "Login", action = "Index" });
}
<h2>Tarif Ekle</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @* Baslik Divi *@
        <div class="form-group">
            <label for="Caption" class="col-sm-2 control-label">Başlık</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Caption, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Caption)
            </div>
        </div>
        @* İçerik Div i *@
        <div class="form-group">
            <label for="Detail" class="col-sm-2 control-label">Detay</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Detail, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Detail)
            </div>
        </div>
        @* Anahtar Kelime Div i *@
        <div class="form-group">
            <label for="Keyword" class="col-sm-2 control-label">Anahtar Kelime</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Keyword, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Keyword)
            </div>
        </div>
        @* Kategoriler Div i *@
        <div class="form-group">
            <label for="CategoryId" class="col-sm-2 control-label">Kategori</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.CategoryId, null, "Seçiniz", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CategoryId)
            </div>
        </div>
        @* Status Div i *@
        <div class="form-group">
            <label for="Status" class="col-sm-2 control-label">Durum</label>
            <div class="col-sm-10">
                <div class="checkbox">
                    <label class="label label-success">
                        @Html.CheckBoxFor(x => x.Status)Aktif
                        @Html.ValidationMessageFor(x => x.Status)
                    </label>
                </div>
            </div>
        </div>
        @* Button *@
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>

            <div id="message" class="col-md-6">
                @Html.Raw(TempData["Mesaj"])
            </div>
        </div>

    </div>
}
